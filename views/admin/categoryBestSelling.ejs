<%- include('../layouts/adminLayouts/header') %>
<div class="screen-overlay"></div>
<%- include('../layouts/adminLayouts/sidebar') %>
<main class="main-wrap">
    <%- include('../layouts/adminLayouts/searchbar') %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Top 10 Best Selling Category</h2>
                <p>Dashboard > Best Sellers > Top 10 Best Selling Category</p>
            </div>
        </div>
        <div class="card mb-4">
            <!-- table content starts -->
            <div class="card-body">
                <% if (topTenBestSellingCategory.length === 0) { %>
                    <p>No Orders available</p>
                <% } else { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Category Name</th>
                                <th scope="col">Total Units Sold</th>
                                <th scope="col">Total Orders</th>
                                <th scope="col">Top Product</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% topTenBestSellingCategory.forEach(category => { %>
                                <tr>
                                    <td><%= category.categoryName %></td>
                                    <td><%= category.totalItemsSold %></td>
                                    <td><%= category.totalOrders %></td>
                                    <td><%= category.topProduct %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } %>
            </div>
        </div>
    </section> <!-- content-main end// -->
</main>
<%- include('../layouts/adminLayouts/footer') %>
