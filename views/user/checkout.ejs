                        const couponCode = document.getElementById('couponCode').value;

                        if (!selectedPaymentMethod && !selectedAddressId) {

                            Swal.fire({
                                icon: 'error',
                                text: 'Please select a payment method and address.',
                                toast: true,
                                position: 'top-right',
                                showConfirmButton: false,
                                timerProgressBar: true,
                                timer: 3000
                            });

